while True:
        num = int(input('Insira qual número deseja ver a tabuada '))
        
        if num > 0:
            print(f'Tabuada de {num}:')
            for i in range(1, 11):
                print(f'{num} x {i} = {num*i}')
        
        elif num == 0:
            print('Todo número multiplicado por 0 é 0')
        
        else:
            print('Número inválido')
